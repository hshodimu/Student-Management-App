@model Student
@{
    Layout = "~/Views/Shared/_Student.cshtml";
}

<h1>Enter Student ID</h1>
<div class="row g-3">
  <div class="col-sm">
    <input type="Number" class="form-control" placeholder="Id" aria-label="Id">
  </div>
</div>

<div class="col-auto">
    <button type="submit" class="btn btn-primary">Submit</button>
</div>

@if (Model != null) 
{
    @await Html.PartialAsync("_SearchResultsPartial", Model);
} else 
{
    return;
}
;